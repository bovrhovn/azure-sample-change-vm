@page
@model SendEmailPageModel

@{
    ViewData["Title"] = "Send email test";
}

<h1>
    Send email form
</h1>

<p>Test sending email with creds</p>

<form method="post">
    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" class="form-control" id="subject" asp-for="Subject"/>
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea rows="3" class="form-control" id="body" asp-for="Body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send email</button>
</form>

<p class="text-dark font-weight-bolder mt-3">
    @Model.InfoText
</p>